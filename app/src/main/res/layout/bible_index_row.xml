<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handlers"
            type="com.ashok.bible.ui.adapter.BibleIndexAdapter" />

        <variable
            name="obj"
            type="com.ashok.bible.data.local.entry.BibleIndexModelEntry" />
    </data>
    <!--android:text='@{obj.chapter+"."+obj.versecount+" "+obj.verse}'-->
    <!--android:text='@{obj.verse}'
    android:text='@{obj.versecount+" "}'-->

    <androidx.cardview.widget.CardView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:onClick="@{(v)->handlers.onClick(v, obj)}"
        android:orientation="horizontal"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/bible_index_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:gravity="left"
                android:text="@{obj.chapter}"
                android:textColor="@color/color_2"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/bible_chapter_count"
                app:layout_constraintEnd_toStartOf="@+id/mic_btn"
                app:layout_constraintStart_toEndOf="@+id/bible_chapter_count"
                app:layout_constraintTop_toTopOf="@+id/bible_chapter_count" />

            <TextView
                android:id="@+id/bible_chapter_count"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/round_bg"
                android:gravity="center"
                android:text="@{String.valueOf(obj.chapter_id)}"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/mic_btn"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:onClick="@{(v)->handlers.onClick(v, obj)}"
                app:layout_constraintBottom_toBottomOf="@+id/bible_index_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/bible_index_text"
                app:srcCompat="@android:drawable/ic_lock_silent_mode_off"
                app:tint="@color/black" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>